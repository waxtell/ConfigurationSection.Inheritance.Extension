<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Will Axtell</Authors>
    <Description>Extends the Microsoft.Extensions.Configuration.Binder code to support discriminator based inheritance</Description>
    <PackageProjectUrl>https://github.com/waxtell/ConfigurationSection.Inheritance.Extension</PackageProjectUrl>
    <RepositoryUrl>https://github.com/waxtell/ConfigurationSection.Inheritance.Extension.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>IConfiguration binder inheritance heterogeneous</PackageTags>
    <PackageReleaseNotes>1.0.0- Initial release</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="3.1.2" />
  </ItemGroup>

</Project>
